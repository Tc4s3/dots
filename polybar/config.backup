[colors]
background = #e8cb74
background-alt = #b5a178
foreground = #563123
primary = #fffadf
secondary = #e8cb74
alert = #985715
disabled = #7e94a3
peach = #FEE6B6

[bar/main]
width = 100%
offset-x = 0.0%
offset-y= 0.0%
height = 26pt
radius = 0

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = true

line-size = 3pt

border-size = 0pt
border-color = #69BE6C

padding-left = 0
padding-right = 1

module-margin = 1

separator = ┃
separator-foreground = ${colors.foreground}

font-0 = TerminessNerdFont:weight=bold:size=16;4

modules-left = rofi xworkspaces xwindow
modules-center=
modules-right = dfstat status uptime date pulseaudio brightness battery network

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/battery]
type = internal/battery
full-at = 99
low-at = 15
battery = BAT0
adapter = ADP0
poll-interval = 5

label-charging = %percentage%
label-discharging = %percentage%
label-low = %percentage%
label-low-foreground = ${colors.foreground}

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.primary}
label-active-underline= ${colors.background-alt}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label =  %title:0:30:%
label-foreground = ${colors.foreground}
label-background = ${colors.primary}
label-underline = ${colors.background-alt}
label-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
interval = 1
format-volume = <label-volume>

label-foreground = ${colors.foreground}
label-volume = %percentage%

label-muted = M
label-muted-foreground = ${colors.foreground}

[module/network]
type = internal/network
interface = wlan0
interface-type = wireless
interval = 1
label-connected = C0NN3CT3D
label-connected-foreground = ${colors.foreground}
label-disconnected = D15C0NN3CT3D
label-disconnected-foreground = ${colors.disabled)

[module/date]
type = internal/date
interval = 1
date = %Y%m%d|%H:%M
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.foreground}

; custom modules

[module/dfstat]
type = custom/script
exec = ~/Scripts/DFStat.sh
interval = 1
label-foreground = ${colors.foreground}

[module/brightness]
type = custom/script
exec = ~/Scripts/brightnesspoly.sh
interval = 1
label-foreground = ${colors.foreground}

#[module/up]
#type = custom/script
#exec = ~/Scripts/udtime.sh
#interval = 1
#
#[module/since]
#type = custom/script
#exec = ~/Scripts/stime.sh
#interval = 1

[module/status]
type = custom/script
exec = ~/Scripts/tmuxstatus.sh
interval = 1
label-foreground = ${colors.foreground}

[module/uptime]
type = custom/script
exec = ~/Scripts/polyup.sh
click-left = ~/Scripts/polyup.sh click
interval = 1
label-foreground = ${colors.foreground}

[module/rofi]
type = custom/script
exec = echo " >_"
click-left = ~/Scripts/rofiapps.sh

[settings]
screenchange-reload = true
pseudo-transparency = false

